@model Coders_Zone.Models.Course
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row border border-1 border-dark m-5">
    <div class="d-flex flex-row justify-content-between p-4">
        <h2>Course</h2>
    </div>
    <form class="my-4" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="form-check form-switch mx-4">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" asp-for="IsPublic" checked>
                <label class="form-check-label" for="flexSwitchCheckChecked">Public</label>
            </div>
            <div class="col-sm-6 ">
                <div class="">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com" asp-for="Name" />
                        <label for="floatingInput" asp-for="Name">Course Name</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-floating mb-3">
                    <input asp-for="Category" type="text" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" asp-for="Category">Course Category</label>
                </div>
            </div>
        </div>
        <div class="input-group mb-3 border border-1 border-dark">
            <label asp-for="Level" class="input-group-text" for="inputGroupSelect01">Options</label>
            <select asp-for="Level" class="form-select" id="inputGroupSelect01">
                <option selected>Select course level</option>
                <option value="All levels">All levels</option>
                <option value="Beginning">Beginning</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Expert">Expert</option>
            </select>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="CoverImage" type="text" class="form-control border border-1 border-dark my-2" id="coverImageInput">
            <label for="coverImageInput">Cover Image</label>
        </div>
        <div class="form-floating border border-1 border-dark">
            <textarea asp-for="Overview" class="form-control" placeholder="Course Overview" id="floatingTextarea2" style="height: 100px"></textarea>
            <label asp-for="Overview" for="floatingTextarea2">Course OverView</label>
        </div>
        
        <div class="row">
            <div class="col-sm-6 ">
                <div class="">
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com" asp-for="Duration" />
                        <label for="floatingInput" asp-for="Duration">Duration in Hours</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-floating mb-3">
                    <input asp-for="NumLessons" type="number" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" asp-for="NumLessons">Number of lessons</label>
                </div>
            </div>
        </div>
        <hr class="m-5" />
        
        <div class="col-sm-12 my-4">
            <button type="submit" class="btn btn-primary w-100 p-3">Save & Upload</button>
        </div>
    </form>
</div>