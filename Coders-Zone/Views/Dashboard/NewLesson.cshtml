@model Coders_Zone.Models.Lesson
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row border border-1 border-dark m-5">
    <div class="d-flex flex-row justify-content-between p-4">
        <h2>Lesson</h2>
    </div>
    <form class="my-4" method="post">

        <div>
            <div class="d-flex flex-row justify-content-between p-4">
                <h2>Add New Lesson</h2>
                <div class="form-check form-switch mx-4">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" asp-for="IsPreview" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Public</label>
                </div>
            </div>
            <div class="row">
                    <div class="form-floating mb-3">
                        <select asp-for="CourseId" class="form-select">
                            <option value="">Select a course</option>
                            @foreach (var course in ViewBag.Courses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                        <label>Select Course</label>
                    </div>

                    <div class="">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" type="text" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="Name" for="floatingInput">Lesson Name</label>
                        </div>
                    </div>
                <div class="col-sm-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Order" type="number" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="Order" for="floatingInput">Lesson Number</label>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="">
                        <div class="form-floating mb-3">
                            <input asp-for="Duration" type="text" class="form-control border border-1 border-dark my-2" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="Duration" for="floatingInput">Lesson Duration</label>
                        </div>
                    </div>
                </div>
                <div class="form-floating">
                    <textarea asp-for="Content" class="form-control border border-1 border-dark" placeholder="Course Overview" id="floatingTextarea2" style="height: 100px"></textarea>
                    <label asp-for="Content" for="floatingTextarea2">Lesson Content</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="VideoUrl" type="text" class="form-control border border-1 border-dark my-2">
                    <label asp-for="VideoUrl" >Vedio URL</label>
                </div>
            </div>
            <div class="col-sm-12 my-4">
                <button type="submit" class="btn btn-primary w-100 p-3">Save & Upload</button>
            </div>
        </div>

    </form>
</div>