@model Coders_Zone.Models.Lesson
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="row border border-1 border-dark m-5">
    <form class="my-4" method="post">

        <div>
            <div class="d-flex flex-row justify-content-between p-4">
                <h2>Add New Lesson</h2>
                <div class="form-check form-switch mx-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsPreview">
                    <label class="form-check-label">Public</label>
                </div>
            </div>
            <div class="row">
                    <div class="form-floating mb-3">
                        <select asp-for="CourseId" class="form-select">
                            @foreach (var course in ViewBag.Courses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                        <label>Select Course</label>
                    </div>

                    <div class="">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" type="text" class="form-control border border-1 border-dark my-2" placeholder="Lesson Name" required>
                            <label asp-for="Name">Lesson Name</label>
                        </div>
                    </div>
                <div class="col-sm-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Order" type="number" class="form-control border border-1 border-dark my-2" placeholder="Lesson Order" required>
                        <label asp-for="Order">Lesson Number</label>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="">
                        <div class="form-floating mb-3">
                            <input asp-for="Duration" type="text" class="form-control border border-1 border-dark my-2" placeholder="Duration" required>
                            <label asp-for="Duration">Lesson Duration</label>
                        </div>
                    </div>
                </div>
                <div class="form-floating">
                    <textarea asp-for="Content" class="form-control border border-1 border-dark" placeholder="Course Overview" style="height: 100px" required></textarea>
                    <label asp-for="Content">Lesson Content</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="VideoUrl" type="text" class="form-control border border-1 border-dark my-2" required>
                    <label asp-for="VideoUrl" >Vedio URL</label>
                </div>
            </div>
            <div class="col-sm-12 my-4">
                <button type="submit" class="btn btn-primary w-100 p-3">Save & Upload</button>
            </div>
        </div>

    </form>
</div>