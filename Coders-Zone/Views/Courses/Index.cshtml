@{
    var courses = new[]
    {
        new
        {
            Category = "Java",
            Title = "This is Course Title",
            ImageUrl = "/images/course1.png",
            StudentsCount = 155,
            Level = "All levels",
            LessonsCount = 20
        },
                new
        {
            Category = "Python",
            Title = "Mastering Python",
            ImageUrl = "/images/course2.png",
            StudentsCount = 300,
            Level = "Intermediate",
            LessonsCount = 12
        },
                new
        {
            Category = "PHP",
            Title = "Web Development Fundamentals",
            ImageUrl = "/images/course3.jpeg",
            StudentsCount = 120,
            Level = "Beginner",
            LessonsCount = 8
        },
                new
        {
            Category = "Python",
            Title = "Artificial Intelligence Essentials",
            ImageUrl = "/images/course3.png",
            StudentsCount = 250,
            Level = "Advanced",
            LessonsCount = 15
        },
                new
        {
            Category = "C#",
            Title = "Data Science for Beginners",
            ImageUrl = "/images/course5.jpg",
            StudentsCount = 200,
            Level = "Beginner",
            LessonsCount = 10
        },

    };
    var distinctCategories = courses.Select(course => course.Category).Distinct();
    var distinctLevels = courses.Select(course => course.Level).Distinct();

}
<!DOCTYPE html>
<html>
    <head>
        <title>Courses Page</title>
    </head>
    <body>
        <div class="">
            <div class="row my-4">
                <div class="col-md-6">
                    <h2>All Courses</h2>
                </div>
                <div class="col-md-6 d-flex">

                    <div class="search-input w-100">
                        <input type="text" placeholder="Search..." class="form-control" id="search" name="search">
                    </div>

                    <div class="col-lg-1 col-md-3 col-sm-12 p-0">
                        <button type="submit" class="btn btn-base">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                                <circle cx="11" cy="11" r="8"></circle>
                                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                            </svg>
                        </button>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    @foreach (var course in courses)
                    {
                        <div class="card mb-3 shadow">
                            <div class="row g-0">
                                <div class="col-md-5">
                                    <img src="@course.ImageUrl" class="img-fluid rounded-start h-100" alt="...">
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body">
                                        <p class="font-weight-bolder">@course.Category</p>
                                        <h4 class="card-title font-weight-bold">@course.Title</h4>
                                        <div class="row">
                                            <div class="col">
                                                <ul class="list-unstyled d-flex justify-content-between p-4 small">
                                                    <li>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-mortarboard-fill text-warning" viewBox="0 0 16 16">
                                                            <path d="M8.211 2.047a.5.5 0 0 0-.422 0l-7.5 3.5a.5.5 0 0 0 .025.917l7.5 3a.5.5 0 0 0 .372 0L14 7.14V13a1 1 0 0 0-1 1v2h3v-2a1 1 0 0 0-1-1V6.739l.686-.275a.5.5 0 0 0 .025-.917z" />
                                                            <path d="M4.176 9.032a.5.5 0 0 0-.656.327l-.5 1.7a.5.5 0 0 0 .294.605l4.5 1.8a.5.5 0 0 0 .372 0l4.5-1.8a.5.5 0 0 0 .294-.605l-.5-1.7a.5.5 0 0 0-.656-.327L8 10.466z" />
                                                        </svg>
                                                        @course.StudentsCount students
                                                    </li>
                                                    <li>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bar-chart-fill text-warning" viewBox="0 0 16 16">
                                                            <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1z" />
                                                        </svg>
                                                        @course.Level
                                                    </li>
                                                    <li>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-journals  text-warning" viewBox="0 0 16 16">
                                                            <path d="M5 0h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2 2 2 0 0 1-2 2H3a2 2 0 0 1-2-2h1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1H1a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v9a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1H3a2 2 0 0 1 2-2" />
                                                            <path d="M1 6v-.5a.5.5 0 0 1 1 0V6h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V9h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 2.5v.5H.5a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1H2v-.5a.5.5 0 0 0-1 0" />
                                                        </svg>
                                                        @course.LessonsCount lessons
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-end">
                                            <button class="btn btn-link text-body text-decoration-none p-0 fw-bold" type="button">View more</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-4">
                    <div class="card mb-3 bg-light shadow">
                        <div class="card-body">
                            <form id="filterForm">
                                <div class="form-group">
                                    <h3 class="card-title font-weight-bold">Filters</h3>

                                    <h5 class="font-weight-bold pt-4">Category</h5>
                                    @foreach (var category in distinctCategories)
                                    {
                                        var categoryCount = courses.Count(course => course.Category == category);
                                        <div class="form-check py-1 d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <input class="form-check-input border-dark" type="checkbox" id="checkbox_@category" name="category" value="@category">
                                                <label class="form-check-label text-dark mx-2" for="checkbox_@category">@category</label>
                                            </div>
                                            <div>@categoryCount courses</div>
                                        </div>
                                    }
                                </div>

                                <div class="form-group">
                                    <h5 class="font-weight-bold pt-4">Level</h5>
                                    @foreach (var level in distinctLevels)
                                    {
                                        var levelCount = courses.Count(course => course.Level == level);
                                        <div class="form-check py-1 d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <input class="form-check-input border-dark" type="checkbox" id="checkbox_@level" name="level" value="@level">
                                                <label class="form-check-label text-dark mx-2" for="checkbox_@level">@level</label>
                                            </div>
                                            <div>@levelCount courses</div>
                                        </div>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
    </body>
</html>

